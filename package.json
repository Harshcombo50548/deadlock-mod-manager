{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "api:dev": "pnpm --filter api dev",
    "dev": "turbo run dev",
    "desktop:dev": "pnpm --filter desktop tauri dev",
    "docker:api:build": "docker build -f apps/api/Dockerfile -t deadlock-api .",
    "docker:api:run": "docker run --rm -p 9000:9000 --env-file .env deadlock-api",
    "docker:api:dev": "docker compose up api --build",
    "docker:api:stop": "docker compose down",
    "docker:api:logs": "docker compose logs -f api",
    "docker": "docker compose up -d",
    "format": "biome format .",
    "lint": "biome check .",
    "format:fix": "biome format . --write",
    "lint:fix": "biome check . --write",
    "check-types": "turbo run check-types",
    "generate-lang-table": "bun scripts/generate-language-table.ts --update-readme",
    "publish-packages": "turbo run build && changeset version",
    "upgrade-dependencies": "pnpm dlx taze -r",
    "version:generate": "turbo run version:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^7.4.4",
    "lefthook": "^1.13.1",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=24.8.0"
  },
  "name": "@deadlock-mods/root",
  "dependencies": {
    "@changesets/cli": "^2.29.7"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.2",
      "@types/react-dom": "19.0.2",
      "tailwind-merge": "^2.6.0"
    },
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "core-js",
      "esbuild",
      "lefthook",
      "msgpackr-extract",
      "puppeteer",
      "sharp",
      "bun"
    ],
    "ignoredBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "packageManager": "pnpm@10.17.0"
}
