{
  "name": "@deadlock-mods/api",
  "version": "1.0.0",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "start": "dotenv -e ../../.env -- bun run src/index.ts",
    "dev": "dotenv -e ../../.env -- bun run --watch src/index.ts",
    "test": "dotenv -e ../../.env -- bun run src/test.ts",
    "desktop:dev": "pnpm dev",
    "version:generate": "genversion -f -p ./package.json --es6 src/version.ts"
  },
  "dependencies": {
    "@deadlock-mods/database": "workspace:*",
    "@deadlock-mods/logging": "workspace:*",
    "@deadlock-mods/utils": "workspace:*",
    "@hono/sentry": "^1.0.10",
    "@orpc/client": "^1.8.7",
    "@orpc/openapi": "^1.8.7",
    "@orpc/server": "^1.8.7",
    "@orpc/zod": "^1.8.6",
    "@sentry/node": "^9.15.0",
    "@sentry/profiling-node": "^8.47.0",
    "better-auth": "^1.3.7",
    "croner": "^9.0.0",
    "dotenv-cli": "^7.4.4",
    "drizzle-orm": "^0.42.0",
    "genversion": "^3.2.0",
    "hono": "^4.8.2",
    "tslog": "^4.9.3",
    "uuid": "^11.1.0",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@deadlock-mods/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "tsdown": "^0.14.1"
  }
}
